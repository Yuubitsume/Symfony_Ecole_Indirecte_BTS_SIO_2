            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Class</th>
                            <th>Matiere</th>
                            <th>Average</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for moyenne in moyennes %}
                            <tr>
                                <td>{{ classe.classeName }}</td>
